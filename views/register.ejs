<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
    <link rel="stylesheet" href="register.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Instrument+Serif&family=Kristi&family=Montserrat:ital,wght@0,300;0,400;1,200;1,300&family=Poppins:ital,wght@0,200;0,300;0,400;1,200;1,300&family=Quicksand:wght@300&family=Roboto+Condensed:ital,wght@0,400;1,300;1,400&family=Roboto:ital,wght@0,100;0,500;0,700;0,900;1,100;1,400;1,500;1,700;1,900&family=Sofia+Sans+Condensed:ital,wght@0,400;0,500;1,300;1,400;1,500&display=swap"
      rel="stylesheet"
    />
  </head>
  
  <body>
    <form method="post" action="/register">
      <div class="fixed">
        <h2>Sign-up page</h2>
        <input type="text" name="name" placeholder="Name" />
        <input type="email" name="email" placeholder="Email" />
        <div class="check">
          <input type="password" name="password" id="pass" placeholder="password"/>
          <i class="fa-solid fa-eye" id="show"></i>
        </div>
        <div class="wrapper">
          <input type="submit" value="Sign-up" class="btn" />
        </div>
      </div>
    </form>
  </body>

  <script
    src="https://kit.fontawesome.com/e500e5c4a4.js"
    crossorigin="anonymous"
  ></script>

  <script>
    let btn = document.getElementById("show");
    let password = document.getElementById("pass");

    btn.addEventListener("click", (e) => {
      e.preventDefault();

      btn.className = `fa-solid fa-eye${
        password.type === "password" ? "" : "-slash"
      }`;

      password.type = password.type === "password" ? "text" : "password";
    });
  </script>
</html>
